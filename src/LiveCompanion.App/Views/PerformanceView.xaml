<UserControl x:Class="LiveCompanion.App.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LiveCompanion.App.ViewModels"
             Background="{StaticResource BackgroundDeepBrush}">

    <UserControl.Resources>
        <!-- Beat flash animation -->
        <Storyboard x:Key="BeatFlash">
            <DoubleAnimation Storyboard.TargetName="BeatIndicator"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0.2" Duration="0:0:0.15"
                             AutoReverse="True" />
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ── Main content ── -->
        <Grid Grid.Row="0" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="32" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="48" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Song title -->
            <TextBlock Grid.Row="0"
                       Text="{Binding SongTitle}"
                       Style="{StaticResource HeroTextStyle}"
                       Margin="40,40,40,0" />

            <!-- Section name -->
            <TextBlock Grid.Row="1"
                       Text="{Binding SectionName}"
                       Style="{StaticResource SectionNameTextStyle}"
                       Margin="40,8,40,0" />

            <Separator Grid.Row="2" Margin="80,16" />

            <!-- BPM + time signature + beat indicator row -->
            <Grid Grid.Row="3" Margin="40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Time signature -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="TIME SIG" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,0,0,4" />
                    <TextBlock Text="{Binding TimeSignature}"
                               FontSize="36" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Beat indicator (center) -->
                <Ellipse x:Name="BeatIndicator"
                         Grid.Column="1"
                         Width="80" Height="80"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="{StaticResource BeatIdleBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsStrongBeat}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource BeatStrongBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsBeatActive}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource BeatWeakBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>

                <!-- BPM -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="BPM" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,0,0,4" />
                    <TextBlock Text="{Binding Bpm}"
                               Style="{StaticResource BpmTextStyle}"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Grid>

            <!-- Spacer -->
            <Border Grid.Row="4" />

            <!-- Play / Stop row -->
            <StackPanel Grid.Row="5" Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="0,0,0,24"
                        Spacing="16">
                <Button Content="▶  PLAY"
                        Style="{StaticResource AccentButtonStyle}"
                        Command="{Binding PlayCommand}"
                        IsEnabled="{Binding CanPlay}"
                        FontSize="18" Padding="32,14" MinWidth="140" />
                <Button Content="⏹  STOP"
                        Style="{StaticResource DangerButtonStyle}"
                        Command="{Binding StopCommand}"
                        IsEnabled="{Binding CanStop}"
                        MinWidth="140" />
            </StackPanel>
        </Grid>

        <!-- ── Song navigation bar ── -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="24,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="◀◀  Prev"
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding CanGoPrevious}" />

                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="{StaticResource TextSecondaryBrush}">
                    <Run Text="{Binding CurrentSongNumber}" FontWeight="Bold"
                         Foreground="{StaticResource TextPrimaryBrush}" />
                    <Run Text=" / " />
                    <Run Text="{Binding TotalSongs}" />
                </TextBlock>

                <Button Grid.Column="2"
                        Content="Next  ▶▶"
                        HorizontalAlignment="Right"
                        IsEnabled="{Binding CanGoNext}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
