<Window x:Class="LiveCompanion.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LiveCompanion.App.Views"
        Title="LiveCompanion"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <TabControl>
            <TabItem Header="Configuration">
                <views:SetupView DataContext="{Binding Setup}"/>
            </TabItem>
            <TabItem Header="Setlist">
                <views:ConfigView DataContext="{Binding Config}"/>
            </TabItem>
            <TabItem Header="Live">
                <views:LiveView DataContext="{Binding Live}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
