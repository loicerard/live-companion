<Application x:Class="LiveCompanion.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:LiveCompanion.App.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Dark.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global converters -->
            <conv:NotNullConverter          x:Key="NotNullConverter" />
            <conv:NotNullToVisibleConverter x:Key="NotNullToVisibleConverter" />
            <conv:BoolToVisibleConverter    x:Key="BoolToVisibleConverter" />
            <conv:BoolToCollapsedConverter  x:Key="BoolToCollapsedConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
